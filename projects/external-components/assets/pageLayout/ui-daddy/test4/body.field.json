    "loginUserInfo": [
        {
            "baseProperties": {
                "name": "userType",
                "id": "userType",
                "type": "radio",
                "label": "User Type",
                "formName": "loginForm"
            },
            "expressionProperties": {
                "requiredValue": true,
                "required": "",
                "readOnly": "",
                "readOnlyValue": false,
                "disabled": "",
                "disabledValue": false,
                "visible": "",
                "visibleValue": true
            },
            "accessor": "userInfo.userType",
            "optionList": [
                {
                    "label": "Customer",
                    "value": "customer",
                    "name": "customer"
                },
                {
                    "label": "Business Owner",
                    "value": "merchant",
                    "name": "merchant"
                }
            ],
            "layoutProperties":{
                "orientation": "horizontal",
                "css": {
                    "configuration": {
                        "selectorName": ".login__user-type",
                        "xs": {
                            "margin-top": "20px"
                        }
                    },
                    "customClassName": "login__user-type"
                }
            }
        },
        {
            "baseProperties": {
                "name": "loginMobNo",
                "id": "loginMobNo",
                "type": "text",
                "label": "Mobile Number",
                "formName": "loginForm"
            },
            "placeholder": "Enter Mobile Number",
            "accessor": "obj.mobileNum",
            "expressionProperties": {
                "requiredValue": true,
                "required": "",
                "readOnly": "",
                "readOnlyValue": false,
                "disabled": "",
                "disabledValue": false,
                "visible": "",
                "visibleValue": true
            },
            "customAttributes": [
                {
                    "name": "disabled",
                    "value": false
                }
            ],                
            "layoutProperties":{
                "labelPlacement": "left"
            },
            "minRequirementPattern": "^.{10,10}$",
            "events": [
                {
                   "event": "",
                    "actions" :[ 
                           {
                               "actionType" : "setfield",
                               "condition": "$userType$ != 'customer'",
                               "field" : "$loginPassword$",
                               "fieldValue": "$loginMobNo$"

                           },
                           {
                            "actionType" : "setfield",
                            "condition": "$userType$ != 'customer'",
                            "field" : "$loginPassword$",
                            "fieldValue": "$loginMobNo$"     
                            }
                    ],
                    "debounce": 3000
                }

            ]
        },
        {
            "baseProperties": {
                "name": "loginPassword",
                "id": "loginPassword",
                "label": "Password",
                "formName": "loginForm",
                "type": "dynamicField",
                "library": "primeng"
            },
            "libraryComponent": "PasswordExternalComponent",
            "placeholder": "Enter Password",
            "accessor": "obj.password",
            "expressionProperties": {
                "requiredValue": true,
                "required": "",
                "readOnly": "",
                "readOnlyValue": false,
                "disabled": "",
                "disabledValue": false,
                "visible": "",
                "visibleValue": true
            },
            "customAttributes": [
                {
                    "name": "weakLabel",
                    "value": "This is my weak label"
                },
                {
                    "name": "feedback",
                    "value": true
                },
                {
                    "name": "placeholder",
                    "value": "Enter Password"
                }
            ],
            "layoutProperties":{
                "labelPlacement": "left"
            },
            "minRequirementPattern": "^.{8,20}$",
            "events": [
                {
                   "event": "",
                    "actions" :[ 
                           {
                               "actionType" : "setfield",
                               "condition": "$userType$ != 'customer'",
                               "field" : "$loginMobNo$",
                               "fieldValue": "1234"

                           },
                           {
                            "actionType" : "setfield",
                            "condition": "$userType$ != 'customer'",
                            "field" : "$loginMobNo$",
                            "fieldValue": "$loginMobNo$"     
                            }
                    ],
                    "debounce": 0
                }

            ]
        }
    ],
    "loginButtons": [
        {
            "baseProperties": {
                "id": "loginBtn",
                "name": "loginBtn",
                "type": "submit",
                "formName": "loginForm",
                "label": "Login"
            },
            "apiConfig": {
                "name": "loginButtonApi",
                "url": "/v1/login",
                "method": "POST",
                "payloadParams": [
                    {
                        "paramName": "mobileNumber",
                        "mappedField": "loginMobNo"
                    },
                    {
                        "paramName": "password",
                        "mappedField": "loginPassword"
                    },
                    {
                        "paramName": "userType",
                        "mappedField": "userType",
                        "mappedValue": "value"
                    },
                    {
                        "paramName": "redirectUrl",
                        "mappedField": "$URL_QUERY_PARAMS",
                        "mappedValue": "redirectUrl"
                    }
                ],
                "onSuccess": {
                    "pageUrl": "",
                    "sharedData": [{
                        "varName": "userType",
                        "responseAccessor": "userType",
                        "cache": true
                    },
                    {
                        "varName": "name",
                        "responseAccessor": "name",
                        "cache": true
                    },
                    {
                        "varName": "shopId",
                        "responseAccessor": "shopId",
                        "cache": true
                    },
                    {
                        "varName": "premiumCustomer",
                        "responseAccessor": "premiumCustomer",
                        "cache": true
                    }],
                    "clearSharedData": ["shopId", "userType", "name", "premiumCustomer"]
                },
                "onError": {
                  "showErrorMessage": true
                }
            }, 
            "events": [
                {
                   "event": "click",
                    "actions" :[ 
                           {
                               "actionType" : "submit",
                                "showLoading": true                              
                           }          
                    ],
                    "debounce": 3000
                }
            ]
            
        },
        {
            "baseProperties": {
                "id": "forgotPwdLink",
                "name": "forgotPwdLink",
                "type": "link",
                "formName": "loginForm",
                "label": "Forgot Password?"
            },
            "accessor": "obj.forgotPwd",
            "href": "/forgotPassword"
        }
    ],
